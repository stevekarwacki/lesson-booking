# Database Configuration
DB_DIALECT=sqlite
DB_STORAGE=./db/database.sqlite
DB_PATH=./database.sqlite

# For production (PostgreSQL/MySQL)
# DB_DIALECT=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_USER=your_username
# DB_PASSWORD=your_password
# DB_NAME=your_database
# DB_SSL=false

# Cache Configuration
CACHE_TYPE=memory # Options: memory, redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Stripe Configuration
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
VITE_STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRES_IN=24h

# Encryption Configuration
# Generate a key with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
ENCRYPTION_KEY=your_encryption_key_here_32_bytes_hex

# Google Calendar Integration (optional - DB-backed configuration preferred)
# Configure via Admin Settings > Calendar Settings instead of env vars
# USE_OAUTH_CALENDAR=true              # true = OAuth, false = Service Account
# GOOGLE_SERVICE_ACCOUNT_EMAIL=sa@project.iam.gserviceaccount.com
# GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY=  # PEM-encoded private key

# Server Configuration
PORT=3000
NODE_ENV=development

# Admin User Configuration
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=admin123
RUN_SEEDS=true 